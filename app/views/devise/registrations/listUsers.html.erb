<h1>Users</h1>


<table class= "table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Admin</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <%# @users = User.all %>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.admin %></td>
                    <td><%= link_to "Edit User", edit_user_path(user), class: "nav-link" %></td>
                    <td><%# link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

<br>

